#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int scores[n];

    // Read scores
    for(int i = 0; i < n; i++) {
        scanf("%d", &scores[i]);
    }

    int min = scores[0];
    int max = scores[0];
    int minCount = 0, maxCount = 0;

    // Check records
    for(int i = 1; i < n; i++) {
        if(scores[i] > max) {
            max = scores[i];
            maxCount++;
        }
        else if(scores[i] < min) {
            min = scores[i];
            minCount++;
        }
    }

    printf("%d %d", maxCount, minCount);

    return 0;
}
